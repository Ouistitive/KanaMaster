<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleur_principale_blanc"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mode de jeu"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre catÃ©gorie de jeu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boutonHiragana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:width="170dp"
                android:text="Hiragana"
                android:letterSpacing="0.5"
                android:layout_marginRight="10dp"
                android:height="60dp"
                />

            <Button
                android:id="@+id/boutonKatakana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:width="170dp"
                android:text="Katakana"
                android:letterSpacing="0.5"
                android:height="60dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/boutonDeux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="230dp"
            android:layout_gravity="center"
            android:text="Les deux"
            android:letterSpacing="0.5"
            android:height="60dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/boutonClassement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classement"
        android:letterSpacing="0.5"
        android:height="60dp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/boutonDeconnexion"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="120dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />
</RelativeLayout>