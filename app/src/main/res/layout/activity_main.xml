<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleur_principale_blanc"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="222dp"
        android:layout_height="311dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-90dp"
        app:srcCompat="@drawable/kanamaster_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre catÃ©gorie de jeu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/boutonHiragana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiragana"
            android:letterSpacing="0.5"
            android:layout_marginBottom="40dp"
            android:height="55dp"
            />

        <Button
            android:id="@+id/boutonKatakana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Katakana"
            android:letterSpacing="0.5"
            android:layout_marginBottom="40dp"
            android:height="55dp"
            />

        <Button
            android:id="@+id/boutonDeux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les deux"
            android:letterSpacing="0.5"
            android:height="55dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/boutonClassement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classement"
        android:letterSpacing="0.5"
        android:height="55dp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>